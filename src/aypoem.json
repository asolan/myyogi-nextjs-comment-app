[{"_id":"7-61","text":"Mirabai Song","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":7,"lineNumber":61},{"_id":"7-62","text":"“If by bathing daily God could be realized","class":"hangingDoubleQuote","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":62},{"_id":"7-63","text":"Sooner would I be a whale in the deep;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":63},{"_id":"7-64","text":"If by eating roots and fruits He could be known","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":64},{"_id":"7-65","text":"Gladly would I choose the form of a goat;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":65},{"_id":"7-66","text":"If the counting of rosaries uncovered Him","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":66},{"_id":"7-67","text":"I would say my prayers on mammoth beads;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":67},{"_id":"7-68","text":"If bowing before stone images unveiled Him","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":68},{"_id":"7-69","text":"A flinty mountain I would humbly worship;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":69},{"_id":"7-70","text":"If by drinking milk the Lord could be imbibed","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":70},{"_id":"7-71","text":"Many calves and children would know Him;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":71},{"_id":"7-72","text":"If abandoning one’s wife would summon God","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":72},{"_id":"7-73","text":"Would not thousands be eunuchs?","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":73},{"_id":"7-74","text":"Mirabai knows that to find the Divine One","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":74},{"_id":"7-75","text":"The only indispensable is Love.”    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":7,"lineNumber":75},{"_id":"8-62","text":"Jagadis Chandra Bose Poem for Rabindranath Tagore","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":8,"lineNumber":62},{"_id":"8-63","text":"O Hermit, call thou in the authentic words","class":"tagorebose","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":63},{"_id":"8-64","text":"Of that old hymn called ","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":64},{"_id":"8-65","text":"Sama;","class":"emphasis","type":"POEM","paragraph":false,"break":false,"chapterNumber":8,"lineNumber":65},{"_id":"8-66","text":" “Rise! Awake!”","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":8,"lineNumber":66},{"_id":"8-67","text":"Call to the man who boasts his ","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":67},{"_id":"8-68","text":"shastric","class":"emphasis","type":"POEM","paragraph":false,"break":false,"chapterNumber":8,"lineNumber":68},{"_id":"8-69","text":" lore","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":8,"lineNumber":69},{"_id":"8-70","text":"From vain pedantic wranglings profitless,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":70},{"_id":"8-71","text":"Call to that foolish braggart to come forth","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":71},{"_id":"8-72","text":"Out on the face of nature, this broad earth,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":72},{"_id":"8-73","text":"Send forth this call unto thy scholar band;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":73},{"_id":"8-74","text":"Together round thy sacrifice of fire","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":74},{"_id":"8-75","text":"Let them all gather. So may our India,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":75},{"_id":"8-76","text":"Our ancient land unto herself return","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":76},{"_id":"8-77","text":"O once again return to steadfast work,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":77},{"_id":"8-78","text":"To duty and devotion, to her trance","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":78},{"_id":"8-79","text":"Of earnest meditation; let her sit","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":79},{"_id":"8-80","text":"      Once more unruffled, greedless, strifeless, pure,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":80},{"_id":"8-81","text":"O once again upon her lofty seat","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":81},{"_id":"8-82","text":"      And platform, teacher of all lands.    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":8,"lineNumber":82},{"_id":"14-43","text":"Samadhi by Paramhansa Yogananda","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":14,"lineNumber":43},{"_id":"14-44","text":"Vanished the veils of light and shade,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":44},{"_id":"14-45","text":"Lifted every vapor of sorrow,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":45},{"_id":"14-46","text":"Sailed away all dawns of fleeting joy,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":46},{"_id":"14-47","text":"Gone the dim sensory mirage.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":47},{"_id":"14-48","text":"Love, hate, health, disease, life, death,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":48},{"_id":"14-49","text":"Perished these false shadows on the screen of duality.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":49},{"_id":"14-50","text":"Waves of laughter, scyllas of sarcasm, melancholic whirlpools,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":50},{"_id":"14-51","text":"Melting in the vast sea of bliss.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":51},{"_id":"14-52","text":"The storm of ","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":52},{"_id":"14-53","text":"maya","class":"emphasis","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":53},{"_id":"14-54","text":" stilled","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":54},{"_id":"14-55","text":"By magic wand of intuition deep.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":55},{"_id":"14-56","text":"The universe, forgotten dream, subconsciously lurks,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":56},{"_id":"14-57","text":"Ready to invade my newly-wakened memory divine.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":57},{"_id":"14-58","text":"I live without the cosmic shadow,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":58},{"_id":"14-59","text":"But it is not, bereft of me;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":59},{"_id":"14-60","text":"As the sea exists without the waves,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":60},{"_id":"14-61","text":"But they breathe not without the sea.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":61},{"_id":"14-62","text":"Dreams, wakings, states of deep ","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":62},{"_id":"14-63","text":"turia","class":"emphasis","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":63},{"_id":"14-64","text":" sleep,","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":64},{"_id":"14-65","text":"Present, past, future, no more for me,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":65},{"_id":"14-66","text":"But ever-present, all-flowing I, I, everywhere.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":66},{"_id":"14-67","text":"Planets, stars, stardust, earth,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":67},{"_id":"14-68","text":"Volcanic bursts of doomsday cataclysms,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":68},{"_id":"14-69","text":"Creation’s molding furnace,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":69},{"_id":"14-70","text":"Glaciers of silent x-rays, burning electron floods,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":70},{"_id":"14-71","text":"Thoughts of all men, past, present, to come,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":71},{"_id":"14-72","text":"Every blade of grass, myself, mankind,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":72},{"_id":"14-73","text":"Each particle of universal dust,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":73},{"_id":"14-74","text":"Anger, greed, good, bad, salvation, lust,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":74},{"_id":"14-75","text":"I swallowed, transmuted all","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":75},{"_id":"14-76","text":"Into a vast ocean of blood of my own one Being!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":76},{"_id":"14-77","text":"Smoldering joy, oft-puffed by meditation","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":77},{"_id":"14-78","text":"Blinding my tearful eyes,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":78},{"_id":"14-79","text":"Burst into immortal flames of bliss,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":79},{"_id":"14-80","text":"Consumed my tears, my frame, my all.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":80},{"_id":"14-81","text":"Thou art I, I am Thou,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":81},{"_id":"14-82","text":"Knowing, Knower, Known, as One!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":82},{"_id":"14-83","text":"Tranquilled, unbroken thrill, eternally living, ever-new peace!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":83},{"_id":"14-84","text":"Enjoyable beyond imagination of expectancy, ","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":84},{"_id":"14-85","text":"samadhi","class":"emphasis","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":85},{"_id":"14-86","text":" bliss! ","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":86},{"_id":"14-87","text":"Not an unconscious state","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":87},{"_id":"14-88","text":"Or mental chloroform without wilful return,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":88},{"_id":"14-89","text":"Samadhi","class":"emphasis","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":89},{"_id":"14-90","text":" but extends my conscious realm","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":90},{"_id":"14-91","text":"Beyond limits of the mortal frame","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":91},{"_id":"14-92","text":"To farthest boundary of eternity","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":92},{"_id":"14-93","text":"Where I, the Cosmic Sea,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":93},{"_id":"14-94","text":"Watch the little ego floating in Me.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":94},{"_id":"14-95","text":"The sparrow, each grain of sand, fall not without My sight.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":95},{"_id":"14-96","text":"All space floats like an iceberg in My mental sea.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":96},{"_id":"14-97","text":"Colossal Container, I, of all things made.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":97},{"_id":"14-98","text":"By deeper, longer, thirsty, guru-given meditation","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":98},{"_id":"14-99","text":"Comes this celestial ","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":99},{"_id":"14-100","text":"samadhi.","class":"emphasis","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":100},{"_id":"14-101","text":"Mobile murmurs of atoms are heard,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":101},{"_id":"14-102","text":"The dark earth, mountains, vales, lo! molten liquid!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":102},{"_id":"14-103","text":"Flowing seas change into vapors of nebulae!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":103},{"_id":"14-104","text":"Aum","class":"emphasis","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":104},{"_id":"14-105","text":" blows upon vapors, opening wondrously their veils,","class":"","type":"POEM","paragraph":false,"break":false,"chapterNumber":14,"lineNumber":105},{"_id":"14-106","text":"Oceans stand revealed, shining electrons,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":106},{"_id":"14-107","text":"Till, at last sound of the cosmic drum,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":107},{"_id":"14-108","text":"Vanish the grosser lights into eternal rays","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":108},{"_id":"14-109","text":"Of all-pervading bliss.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":109},{"_id":"14-110","text":"From joy I came, for joy I live, in sacred joy I melt.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":110},{"_id":"14-111","text":"Ocean of mind, I drink all creation’s waves.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":111},{"_id":"14-112","text":"Four veils of solid, liquid, vapor, light,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":112},{"_id":"14-113","text":"Lift aright.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":113},{"_id":"14-114","text":"Myself, in everything, enters the Great Myself.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":114},{"_id":"14-115","text":"Gone forever, fitful, flickering shadows of mortal memory.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":115},{"_id":"14-116","text":"Spotless is my mental sky, below, ahead, and high above.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":116},{"_id":"14-117","text":"Eternity and I, one united ray.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":117},{"_id":"14-118","text":"A tiny bubble of laughter, I","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":118},{"_id":"14-119","text":"Am become the Sea of Mirth Itself.    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":14,"lineNumber":119},{"_id":"24-33","text":"Lord Shankara Chant","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":24,"lineNumber":33},{"_id":"24-34","text":"“Mind, nor intellect, nor ego, feeling;","class":"hangingDoubleQuote","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":34},{"_id":"24-35","text":"Sky nor earth nor metals am I.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":35},{"_id":"24-36","text":"I am He, I am He, Blessed Spirit, I am He!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":36},{"_id":"24-37","text":"No birth, no death, no caste have I;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":37},{"_id":"24-38","text":"Father, mother, have I none.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":38},{"_id":"24-39","text":"I am He, I am He, Blessed Spirit, I am He!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":39},{"_id":"24-40","text":"Beyond the flights of fancy, formless am I,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":40},{"_id":"24-41","text":"Permeating the limbs of all life;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":41},{"_id":"24-42","text":"Bondage I do not fear; I am free, ever free,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":42},{"_id":"24-43","text":"I am He, I am He, Blessed Spirit, I am He!”    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":24,"lineNumber":43},{"_id":"26-129","text":"Sonnet 146 by Shakespeare","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":26,"lineNumber":129},{"_id":"26-130","text":"So shalt thou feed on Death, that feeds on men:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":26,"lineNumber":130},{"_id":"26-131","text":"And Death once dead, there’s no more dying then.","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":26,"lineNumber":131,"footnote":["Shakespeare: ","Sonnet"," #146."],"footnoteClass":["","emphasis",""],"footnoteCount":13},{"_id":"33-29","text":"Moon of my Delight by Omar Khayyam","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":33,"lineNumber":29},{"_id":"33-30","text":"“Ah, Moon of my Delight who know’st no wane,","class":"hangingDoubleQuote","type":"POEM","paragraph":false,"break":true,"chapterNumber":33,"lineNumber":30},{"_id":"33-31","text":"The Moon of Heav’n is rising once again;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":33,"lineNumber":31},{"_id":"33-32","text":"How oft hereafter rising shall she look","class":"poemIndent","type":"POEM","paragraph":false,"break":true,"chapterNumber":33,"lineNumber":32},{"_id":"33-33","text":"Through this same Garden after me—in vain!”    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":33,"lineNumber":33},{"_id":"37-98","text":"God God God by Paramhansa Yogananda","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":37,"lineNumber":98},{"_id":"37-99","text":"From the depths of slumber","class":"GodGodGod","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":99},{"_id":"37-100","text":"As I ascend the spiral stairway of wakefulness,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":100},{"_id":"37-101","text":"I whisper:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":101},{"_id":"37-102","text":"God! God! God!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":102},{"_id":"37-103","text":"Thou art the food, and when I break my fast","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":103},{"_id":"37-104","text":"Of nightly separation from Thee,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":104},{"_id":"37-105","text":"I taste Thee, and mentally say:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":105},{"_id":"37-106","text":"God! God! God!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":106},{"_id":"37-107","text":"No matter where I go, the spotlight of my mind","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":107},{"_id":"37-108","text":"Ever keeps turning on Thee;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":108},{"_id":"37-109","text":"And in the battle din of activity","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":109},{"_id":"37-110","text":"My silent war cry is ever:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":110},{"_id":"37-111","text":"God! God! God!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":111},{"_id":"37-112","text":"When boisterous storms of trials shriek,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":112},{"_id":"37-113","text":"And when worries howl at me,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":113},{"_id":"37-114","text":"I drown their clamor, loudly chanting:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":114},{"_id":"37-115","text":"God! God! God!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":115},{"_id":"37-116","text":"When my mind weaves dreams","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":116},{"_id":"37-117","text":"With threads of memories,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":117},{"_id":"37-118","text":"Then on that magic cloth I find embossed:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":118},{"_id":"37-119","text":"God! God! God!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":119},{"_id":"37-120","text":"Every night, in time of deepest sleep,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":120},{"_id":"37-121","text":"My peace dreams and calls, Joy! Joy! Joy!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":121},{"_id":"37-122","text":"And my joy comes singing evermore:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":122},{"_id":"37-123","text":"God! God! God!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":123},{"_id":"37-124","text":"In waking, eating, working, dreaming, sleeping,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":124},{"_id":"37-125","text":"Serving, meditating, chanting, divinely loving,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":125},{"_id":"37-126","text":"My soul constantly hums, unheard by any:","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":126},{"_id":"37-127","text":"God! God! God!    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":127},{"_id":"37-130","text":"Mother of Exiles by Emma Lazarus","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":37,"lineNumber":130},{"_id":"37-131","text":"From her beacon-hand","class":"LazarusPoemFirstLine","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":131},{"_id":"37-132","text":"Glows world-wide welcome; her mild eyes command","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":132},{"_id":"37-133","text":"The air-bridged harbor that twin cities frame.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":133},{"_id":"37-134","text":"“Keep, ancient lands, your storied pomp!” cries she","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":134},{"_id":"37-135","text":"With silent lips. “Give me your tired, your poor,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":135},{"_id":"37-136","text":"Your huddled masses yearning to breathe free,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":136},{"_id":"37-137","text":"The wretched refuse of your teeming shore.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":137},{"_id":"37-138","text":"Send these, the homeless, tempest-tost to me,","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":138},{"_id":"37-139","text":"I lift my lamp beside the golden door.    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":37,"lineNumber":139},{"_id":"41-69","text":"Control of the mind by Thayumanavar","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":41,"lineNumber":69},{"_id":"41-70","text":"You can control a mad elephant;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":70},{"_id":"41-71","text":"You can shut the mouth of the bear and the tiger;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":71},{"_id":"41-72","text":"You can ride a lion;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":72},{"_id":"41-73","text":"You can play with the cobra;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":73},{"_id":"41-74","text":"By alchemy you can eke out your livelihood;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":74},{"_id":"41-75","text":"You can wander through the universe incognito;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":75},{"_id":"41-76","text":"You can make vassals of the gods;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":76},{"_id":"41-77","text":"You can be ever youthful;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":77},{"_id":"41-78","text":"You can walk on water and live in fire;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":78},{"_id":"41-79","text":"But control of the mind is better and more difficult.    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":41,"lineNumber":79},{"_id":"42-141","text":"Poem by Ravidas","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":42,"lineNumber":141},{"_id":"42-142","text":"Under the vast vault of blue","class":"ravidasStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":42,"lineNumber":142},{"_id":"42-143","text":"Lives the divinity clothed in hide.    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":42,"lineNumber":143},{"_id":"48-55","text":"None can love me by Ancient Bengali Devotee","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":48,"lineNumber":55},{"_id":"48-56","text":"In this world, Mother, none can love me;","class":"noonecanloveme","type":"POEM","paragraph":true,"break":false,"chapterNumber":48,"lineNumber":56},{"_id":"48-57","text":"In this world they do not know love divine.","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":57},{"_id":"48-58","text":"Where is there pure loving love?","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":58},{"_id":"48-59","text":"Where is there truly loving Thee?","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":59},{"_id":"48-60","text":"There my heart longs to be.    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":60},{"_id":"48-66","text":"Soul Marching On","class":"poemStart","type":"POEM","paragraph":true,"break":false,"chapterNumber":48,"lineNumber":66},{"_id":"48-67","text":"The grinding wheel of Time doth mar","class":"soulmarchingon","type":"POEM","paragraph":true,"break":false,"chapterNumber":48,"lineNumber":67},{"_id":"48-68","text":"Full many a life of moon and star","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":68},{"_id":"48-69","text":"And many a brightly smiling morn—","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":69},{"_id":"48-70","text":"But still my soul is marching on!","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":70},{"_id":"48-71","text":"Darkness, death, and failures vied;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":71},{"_id":"48-72","text":"To block my path they fiercely tried;","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":72},{"_id":"48-73","text":"My fight with jealous Nature’s strong—","class":"","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":73},{"_id":"48-74","text":"But still my soul is marching on!    ","class":"poemEnd","type":"POEM","paragraph":false,"break":true,"chapterNumber":48,"lineNumber":74}]
